<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

  <body>
    <!-- Navigation-->
    <%- include('layouts/navbar'); -%>
      <!-- Page Header-->
      <header class="masthead" style="background-image: url('assets/img/login.jpg')">
        <div class="container position-relative px-4 px-lg-5">
          <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
              <div class="page-heading">
                <h1>Login/Signup</h1>
                <span class="subheading">Signup to book a Road Test</span>
              </div>
            </div>
          </div>
        </div>
      </header>
      <!-- Post Content-->
      <main class="mb-4">
        <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="login-tab" data-bs-toggle="tab" data-bs-target="#loginForm"
              type="button" role="tab" aria-controls="login" aria-selected="true">Login</button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="signup-tab" data-bs-toggle="tab" data-bs-target="#signupform" type="button"
              role="tab" aria-controls="signup" aria-selected="false">Sign Up</button>
          </li>
        </ul>

        <div class="container px-4 px-lg-5">
          <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
              <div class="my-5 tab-content">

                <% if(typeof errs !=='undefined' && errs !=null && errs.length> 0) {%>
                  <ul class="list-group">
                    <% for ( let i in errs ) {%>
                      <li class="list-group-item list-group-item-danger">
                        <%= errs[i] %>
                      </li>
                      <% } %>
                  </ul>
                  <% } %>

                    <% if( typeof success !=='undefined' && success !=null && success.length> 0) {%>
                      <ul class="list-group">
                        <% for ( let i in success ) {%>
                          <li class="list-group-item list-group-item-success">
                            <%= success[i] %>
                          </li>
                          <% } %>
                      </ul>
                      <% } %>

                        <!-- Form starts-->
                        <form class="tab-pane fade show active" id="loginForm" action="/login" method="POST"
                          data-sb-form-api-token="API_TOKEN">
                          <!-- User Name Field-->
                          <div class="form-floating">
                            <input class="form-control" id="Username" name="Username" type="text"
                              placeholder="Enter your user name..." data-sb-validations="required,username" />
                            <label for="Username">User Name</label>
                            <div class="invalid-feedback" data-sb-feedback="Username:required">A
                              User name
                              is
                              required.
                            </div>
                            <div class="invalid-feedback" data-sb-feedback="username:username">User
                              Name is
                              not valid.
                            </div>
                          </div>
                          <!-- Password Field-->
                          <div class="form-floating">
                            <input class="form-control" id="Password" name="Password" type="password"
                              placeholder="Enter your password..." data-sb-validations="required,password" />
                            <label for="Password">Password</label>
                            <div class="invalid-feedback" data-sb-feedback="Password:required">An
                              password
                              is
                              required.
                            </div>
                          </div>
                          <br />
                          <!-- Submit Button-->
                          <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Login</button>
                        </form>


                        <form class="tab-pane fade" id="signupform" action="/signup" method="POST"
                          data-sb-form-api-token="API_TOKEN">
                          <!-- User Name Field-->
                          <div class="form-floating">
                            <input class="form-control" id="Username" name="Username" type="text"
                              placeholder="Enter your user name..." data-sb-validations="required,username" />
                            <label for="Username">User Name</label>
                            <div class="invalid-feedback" data-sb-feedback="Username:required">An
                              user name
                              is
                              required.
                            </div>
                            <div class="invalid-feedback" data-sb-feedback="username:username">User
                              Name is
                              not valid.
                            </div>
                          </div>
                          <!-- Password Field-->
                          <div class="form-floating">
                            <input class="form-control" id="Password" name="Password" type="Password"
                              placeholder="Enter your Password..." data-sb-validations="required,Password" />
                            <label for="Password">Password</label>
                            <div class="invalid-feedback" data-sb-feedback="Password:required">An
                              password
                              is
                              required.
                            </div>
                          </div>
                          <!-- Confirm Password Field-->
                          <div class="form-floating">
                            <input class="form-control" id="confirmPassword" name="confirmPassword" type="password"
                              placeholder="Enter your password..." data-sb-validations="required,rePass" />
                            <label for="confirmPassword">Confirm Password</label>
                            <div class="invalid-feedback" data-sb-feedback="confirmPassword:required">An
                              confirm password
                              is
                              required.
                            </div>
                          </div>
                          <div class="form-floating">
                            <select id="UserType" name="UserType" class="form-select">
                              <option value="Driver">Driver</option>
                              <option value="Examiner">Examiner</option>
                              <option value="Admin">Admin</option>
                            </select>
                            <label for="usertype">User Type</label>
                            <div class="invalid-feedback" data-sb-feedback="usertype:required">An
                              usertype
                              is
                              required.
                            </div>
                          </div>
                          <br />
                          <!-- Submit Button-->
                          <button class="btn btn-primary text-uppercase" id="submitButton" type="submit">Sign
                            Up</button>
                        </form>
              </div>
            </div>
          </div>
        </div>
      </main>
      <!-- Footer-->
      <%- include('layouts/footer'); -%> <%- include('layouts/scripts'); -%>
  </body>

</html>